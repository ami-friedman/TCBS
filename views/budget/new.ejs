<% include ../partials/header.ejs %>

<div class="container new-budget-container">
    <form action="/budget/new" method="POST">
        <% categories.forEach( category => { %>
        <div class="form-group category-label">
            <h2>
                <label value="<%= category %>">Category
                    <%= category %>:
                </label>
            </h2>
        </div>
        <ul id="ul-category-<%= category %>">
            <% let index = 0 %>
            <li style="list-style: none;">
                <div class="form-row">
                    <div class="col from-group">
                        <input type="text" class="form-control" name="<%= category %>[<%= index %>][name]" placeholder="Expense Name">
                    </div>
                    <div class="col from-group">
                        <input type="number" class="form-control" name="<%= category %>[<%= index++ %>][amount]" placeholder="Expense Amount">
                    </div>
                    <div class="col form-group add-remove-button">
                        <button type="button" class="btn btn-success edit-button">+</button>
                    </div>
                </div>
            </li>
        </ul>
        <% }) %>
        <div class="form-group" style="text-align: left;">
            <button type="submit" class="btn btn-success">Create</button>
        </div>

    </form>
</div>


<% include ../partials/footer.ejs %>